<?xml version="1.0" encoding="utf-8" ?>
<fsm  xmlns="urn:schema-lwj:fsm"
     xmlns:x="urn:schema-lwj:expression"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="urn:schema-lwj:fsm ../../../../resources/lwj.fsm.xsd
      urn:schema-lwj:expression ../../../../resources/lwj.expr.xsd"
    initial="s1">
  <params>
    <param type="int32" name="n"/>
  </params>
  <state name="s1">
    <transition target="s2" event="to.s2"/>
  </state>
  <state name="s2">
    <transition target="s1" />
    <onEntry>
      <if>
        <cond>
          <x:equal>
            <x:var>n</x:var>
            <x:int32>1</x:int32>
          </x:equal>
        </cond>
        <then>
          <log msg="1"/>
        </then>
        <elseIf>
          <cond>
            <x:equal>
              <x:var>n</x:var>
              <x:int32>2</x:int32>
            </x:equal>
          </cond>
          <then>
            <if>
              <cond>
                <x:true/>
              </cond>
              <then>
                <log msg="2"/>
              </then>
            </if>
          </then>
        </elseIf>
        <elseIf>
          <cond>
            <x:equal>
              <x:var>n</x:var>
              <x:int32>3</x:int32>
            </x:equal>
          </cond>
          <then>
            <log msg="3"/>
          </then>
        </elseIf>
        <else>
          <log msg="0"/>
        </else>
      </if>
    </onEntry>
  </state>
</fsm>